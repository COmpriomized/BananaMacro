<UserControl x:Class="BananaMacro.UI.ConfigButtons.ConfigBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid Background="{DynamicResource PanelBrush}" Padding="8">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>

    <TextBlock Text="Ready" Foreground="{DynamicResource MutedTextBrush}" VerticalAlignment="Center"/>

    <StackPanel Orientation="Horizontal" Grid.Column="1">
      <Button Name="BtnLoad" Content="Load Config" Width="120" Margin="4" Click="BtnLoad_Click"/>
      <Button Name="BtnSave" Content="Save Config" Width="120" Margin="4" Click="BtnSave_Click"/>
    </StackPanel>
  </Grid>
</UserControl>