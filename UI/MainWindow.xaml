<Window x:Class="BananaMacro.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:BananaMacro.UI.Views"
        xmlns:cb="clr-namespace:BananaMacro.UI.ConfigButtons"
        Title="BananaMacro" Width="1100" Height="720" Background="{DynamicResource BgBrush}" WindowStartupLocation="CenterScreen">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TabControl Grid.Row="0" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextBrush}">
      <TabItem Header="Dashboard"><views:DashboardTab/></TabItem>
      <TabItem Header="Macro"><views:MacroTab/></TabItem>
      <TabItem Header="Seeds"><views:SeedsTab/></TabItem>
      <TabItem Header="Gears"><views:GearsTab/></TabItem>
      <TabItem Header="Plugins"><views:PluginsTab/></TabItem>
      <TabItem Header="Logs"><views:LogsTab/></TabItem>
    </TabControl>

    <cb:ConfigBar Grid.Row="1" HorizontalAlignment="Stretch"/>
  </Grid>
</Window>