<UserControl x:Class="BananaMacro.UI.Views.MacrosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:BananaMacro.UI.ViewModels">
    <UserControl.DataContext>
        <vm:MacrosViewModel />
    </UserControl.DataContext>

    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="4">
            <Button Content="Add" Command="{Binding AddCommand}" Margin="0,0,4,0"/>
            <Button Content="Remove" Command="{Binding RemoveCommand}" Margin="0,0,4,0"/>
        </StackPanel>

        <ListBox ItemsSource="{Binding Items}" SelectedItem="{Binding Selected}" DisplayMemberPath="Name" Margin="4"/>
    </DockPanel>
</UserControl>