<UserControl x:Class="BananaMacro.UI.Controls.MacroEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:BananaMacro.UI.ViewModels">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Name" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox Width="400" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <TextBox Grid.Row="1" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                 Text="{Binding Script, UpdateSourceTrigger=PropertyChanged}" FontFamily="Consolas" />

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,8,0,0">
            <CheckBox Content="Enabled" IsChecked="{Binding Enabled}" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <Button Content="Start" Command="{Binding StartCommand}" Margin="0,0,8,0"/>
            <Button Content="Stop" Command="{Binding StopCommand}" />
        </StackPanel>
    </Grid>
</UserControl>